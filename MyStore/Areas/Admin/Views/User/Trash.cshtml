@model IEnumerable<MyClass.Model.Users>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}


@section header
{
    <link rel="stylesheet" href="~/Public/datatable/jquery.dataTables.min.css" />
}

@section footer
{
    <script src="~/Public/datatable/jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">Danh mục người dùng</strong>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="@Url.Action("Index", "User")" class="btn-sm btn-info"><i class="fa fa-long-arrow-alt-left"></i> Quay về</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.Partial("Message")
                        <table id="myTable" class="display table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Id</th>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                                    <th>@Html.DisplayNameFor(model => model.Password)</th>
                                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                                    <th>Chức Năng</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><input type="checkbox" name="id" value=" " /></td>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                                        <td>
                                            <a href="@Url.Action("Recover", "User", new { id = item.Id })" class="btn-sm btn-info"><i class="fa fa-undo"></i></a>
                                            <a href="@Url.Action("Delete", "User", new { id = item.Id })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div> <!-- /.card-footer-->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div> <!-- /.content-wrapper -->
    </div>
}


